        .fons--project   
            .idea
                .container
                    .idea__header 
                        h4.public__h4 Предложи свой букет
                    .idea__container
                        .idea__inputs
                            +inputsSet('Имя')
                            +inputsSet('Телефон')
                            +areaText("Ваша идея")
                        .idea__img 
                            img(src="./image/ideaImg.png", alt="")
                    .idea__footer
                        +BtnBig('Отправить')
        .view
            .container 
                .view__logo
                    .header__logo
                                h2 FlORISTMAN 
                                span Широкий выбор на любой вкус 
                .view__container 
                    +catalogItem("Цветы",'./image/row.png')
