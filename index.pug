                    h4.public__h4 Каталог
                    .collection__container
                        .collection__left
                            +catalogItem('Для вас', './image/forYou.png')
                            +catalogItem('Сладости','./image/sweet.png')
                        .collection__center
                            +catalogItemBig('Подарки','./image/sot.png','right')
