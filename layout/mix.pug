mixin basketCard()
    .listShop__item 
        .listShop__img
            img(src="../image/card.png", alt="")
        .listShop__content 
                .listShop__header
                    .listShop__text №225 “Ромашки для Наташки”
                    .listShop__delete 
                        img(src="../image/del.svg", alt="")
                .listShop__footer 
                    .listShop__price
                        .card__price.listShop__price-card 
                            .card__oldprice 
                                p 5 400 грн
                            .card__currentprice 
                                p 3 700 грн 
                    .listShop__count
                            .listShop__number 1 

mixin radioInput(text,name,id)
    label.labelRadio(for=id)
        

        input.inputRadio(type="radio",name=name,id=id)
        .radioDiv 
        .labelRadio__text=text  

mixin filter(h5,count,name)
    h5.filter__h5=h5
    .filter__container 
        - for (var i = 1; i < count; ++i) {
            label.filter__label(for=h5 + i) 
                input(type="radio",id=h5 + i,name=name).filter__item
                .filter__text=h5+'(0)'
                    
        - }
           