mixin catalogItem(text,img)
    .catCard
        .catCard__img
            img(src=img)
        .catCard__footer
            .one
                img(src="../image/leftTop.svg", alt="")
                img(src="../image/leftBottom.svg", alt="")
            .content=text
            .two
               img(src="../image/rightTop.svg", alt="")
               img(src="../image/rightBottom.svg", alt="")
//- вид каталога    
mixin catalogItemBig(text,img,align)
    .catCard.catCard-width
        .catCard__img
            img(src=img)
        if align=='left'
            .catCard__footer-big.catCard__footer-big-left
                .one
                    img(src="../image/leftTopBig.svg", alt="") 
                    img(src="../image/rightTopBig.svg", alt="")
                    
                .content=text
                .two
                    img(src="../image/leftBottomBig.svg", alt="")
                    img(src="../image/rightBottomBig.svg", alt="")
        else if align=='right'
            .catCard__footer-big
                .one
                    img(src="../image/leftTopBig.svg", alt="") 
                    img(src="../image/rightTopBig.svg", alt="")
                    
                .content=text
                .two
                    img(src="../image/leftBottomBig.svg", alt="")
                    img(src="../image/rightBottomBig.svg", alt="")
//- вид каталога больших    
